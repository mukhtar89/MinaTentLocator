<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Activities.MapsActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#2659A8"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:paddingTop="10dp">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:layout_weight="1"
                    android:id="@+id/map_from_label"
                    android:textSize="15sp"
                    android:text="From: "
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="4"
                    android:layout_weight="4"
                    android:background="#073987"
                    android:id="@+id/map_from"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_marginRight="30dp"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:id="@+id/map_to_label"
                    android:textSize="15sp"
                    android:text="To: "

                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/map_list_category_to"
                    android:textSize="15sp"
                    android:layout_span="4"
                    android:layout_weight="4"
                    android:layout_marginRight="30dp"
                    android:padding="3dp" />

            </TableRow>

        </TableLayout>

    </android.support.v7.widget.Toolbar>

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="1" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:textSize="17sp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/esttime"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="0.15"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/distance"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="0.85"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Shortest Route, Walking"
            android:id="@+id/mode_transit"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" />

    </GridLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/snackbar_layout">

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
