<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/coordinator_layout_fragment"
    tools:context="sa.iff.minatentlocator.NavFragment"
    android:background="@color/button_material_light"
    android:theme="@style/Base.Theme.AppCompat.Light">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/from_card"
            android:layout_margin="0dp"
            android:animateLayoutChanges="true"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:animateLayoutChanges="true"
                android:id="@+id/origin_table">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:background="#D81920">

                    <TextView
                        android:text="Origin"
                        android:id="@+id/fromHead"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/ic_flight_takeoff_black_18dp"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="2dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingTop="20dp" />

                    <RadioButton
                        android:text="My Location"
                        android:id="@+id/my_loc_button"
                        android:checked="false"
                        android:drawableLeft="@drawable/ic_my_location_black_18dp"
                        android:drawablePadding="2dp"
                        android:textSize="16sp"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:drawableTint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:buttonTint="#FFFFFF" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/favourites_row"
                    android:background="#ffaa00">

                    <TextView
                        android:text="Favourites:  "
                        android:id="@+id/favourite_label"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_star_rate_black_18dp"
                        android:drawableTint="#FFFFFF"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="2dp"
                        android:singleLine="true"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/list_favourite"
                        android:layout_gravity="top"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/category_row">

                    <TextView
                        android:text="@string/category"
                        android:id="@+id/category_from"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_layers_black_18dp"
                        android:drawablePadding="2dp"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <Spinner
                        android:id="@+id/list_category_from"
                        android:layout_gravity="top"
                        android:textSize="16sp"
                        android:layout_weight="2"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/place_row">

                    <TextView
                        android:text="@string/place"
                        android:id="@+id/place_from"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_place_black_18dp"
                        android:drawablePadding="2dp"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <sa.iff.minatentlocator.InstantAutoComplete
                        android:text=""
                        android:hint="Example: 1/162"
                        android:textColor="@android:color/primary_text_light"
                        android:id="@+id/auto_from"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:layout_gravity="top"
                        android:paddingRight="20dp"
                        android:layout_weight="2"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_card"
            android:layout_margin="0dp"
            android:animateLayoutChanges="true"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:background="#20af10">

                    <TextView
                        android:text="Destination"
                        android:id="@+id/toHead"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_flight_land_black_18dp"
                        android:drawablePadding="2dp"
                        android:drawableTint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:paddingTop="20dp"
                        android:layout_weight="3" />

                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp">

                    <TextView
                        android:text="@string/category"
                        android:id="@+id/category_to"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_layers_black_18dp"
                        android:drawablePadding="2dp"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <Spinner
                        android:id="@+id/list_category_to"
                        android:layout_gravity="top"
                        android:textSize="16sp"
                        android:layout_weight="2"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:text="@string/place"
                        android:id="@+id/place_to"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_place_black_18dp"
                        android:drawablePadding="2dp"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <sa.iff.minatentlocator.InstantAutoComplete
                        android:text=""
                        android:hint="Example: 1/162"
                        android:textColor="@android:color/primary_text_light"
                        android:id="@+id/auto_to"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:layout_gravity="top"
                        android:paddingRight="70dp"
                        android:layout_weight="2"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_directions_black_18dp"
        app:backgroundTint="#fff700"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal" />

</android.support.design.widget.CoordinatorLayout>
