<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sa.iff.minatentlocator.NavFragment"
    android:background="@color/wallet_highlighted_text_holo_dark"
    android:theme="@style/Base.Theme.AppCompat.Light">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/from_card"
            android:layout_margin="0dp"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:id="@+id/origin_table">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:text="Origin"
                        android:id="@+id/fromHead"
                        android:textSize="25sp"
                        android:padding="1dp"
                        android:textColor="#D81920"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="My Location"
                        android:id="@+id/my_loc_button"
                        android:checked="false"
                        android:paddingRight="30dp"
                        android:textSize="18sp"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:onClick="onRadioButtonClicked"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#000000"
                        android:layout_weight="3" />

                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/category_row">

                    <TextView
                        android:text="Category: "
                        android:id="@+id/category_from"
                        android:textSize="18sp"
                        android:paddingTop="18dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <Spinner
                        android:id="@+id/list_category_from"
                        android:layout_gravity="top"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="2"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/place_row">

                    <TextView
                        android:text="Place: "
                        android:id="@+id/place_from"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <sa.iff.minatentlocator.InstantAutoComplete
                        android:text=""
                        android:hint="Example: 1/162"
                        android:textColor="@android:color/primary_text_light"
                        android:id="@+id/auto_from"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        android:paddingRight="20dp"
                        android:layout_weight="2"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_card"
            android:layout_margin="0dp"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:text="Destination"
                        android:id="@+id/toHead"
                        android:textSize="25sp"
                        android:padding="1dp"
                        android:textColor="#20af10"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:layout_weight="3" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#000000"
                        android:layout_weight="3" />

                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp">

                    <TextView
                        android:text="Category: "
                        android:id="@+id/category_to"
                        android:textSize="18sp"
                        android:paddingTop="18dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <Spinner
                        android:id="@+id/list_category_to"
                        android:layout_gravity="top"
                        android:textSize="18sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="2"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:text="Place: "
                        android:id="@+id/place_to"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <sa.iff.minatentlocator.InstantAutoComplete
                        android:text=""
                        android:hint="Example: 1/162"
                        android:textColor="@android:color/primary_text_light"
                        android:id="@+id/auto_to"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        android:paddingRight="70dp"
                        android:layout_weight="2"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnGo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/To"
            android:layout_margin="10dp"
            android:text="Show Directions" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
