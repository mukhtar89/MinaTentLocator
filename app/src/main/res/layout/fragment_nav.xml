<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="sa.iff.minatentlocator.NavFragment"
    android:background="@color/common_action_bar_splitter"
    android:theme="@style/Base.Theme.AppCompat.Light">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/from_card"
            android:layout_margin="0dp"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:id="@+id/origin_table">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:background="#D81920">

                    <TextView
                        android:text="Origin"
                        android:id="@+id/fromHead"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/take_off_36"
                        android:drawableTint="#FFFFFF"
                        android:drawablePadding="2dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:paddingTop="20dp" />

                    <RadioButton
                        android:text="My Location"
                        android:id="@+id/my_loc_button"
                        android:checked="false"
                        android:drawableLeft="@drawable/user_location_24"
                        android:drawablePadding="2dp"
                        android:textSize="18sp"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:drawableTint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:buttonTint="#FFFFFF" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/favourites_row"
                    android:background="#ffaa00">

                    <TextView
                        android:text="Favourites:  "
                        android:id="@+id/favourite_label"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/star_filled_24"
                        android:drawableTint="#FFFFFF"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="2dp"
                        android:singleLine="true"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/list_favourite"
                        android:layout_gravity="top"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/category_row">

                    <TextView
                        android:text="Category: "
                        android:id="@+id/category_from"
                        android:drawableLeft="@drawable/map_marker_24"
                        android:drawablePadding="2dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <Spinner
                        android:id="@+id/list_category_from"
                        android:layout_gravity="top"
                        android:textSize="18sp"
                        android:layout_weight="2"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/place_row">

                    <TextView
                        android:text="Place: "
                        android:id="@+id/place_from"
                        android:drawableLeft="@drawable/marker_24"
                        android:drawablePadding="2dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <sa.iff.minatentlocator.InstantAutoComplete
                        android:text=""
                        android:hint="Example: 1/162"
                        android:textColor="@android:color/primary_text_light"
                        android:id="@+id/auto_from"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        android:paddingRight="20dp"
                        android:layout_weight="2"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_card"
            android:layout_margin="0dp"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="2dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:background="#20af10">

                    <TextView
                        android:text="Destination"
                        android:id="@+id/toHead"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/landing_36"
                        android:drawablePadding="2dp"
                        android:drawableTint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:paddingTop="20dp"
                        android:layout_weight="3" />

                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="5dp">

                    <TextView
                        android:text="Category: "
                        android:id="@+id/category_to"
                        android:drawableLeft="@drawable/map_marker_24"
                        android:drawablePadding="2dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <Spinner
                        android:id="@+id/list_category_to"
                        android:layout_gravity="top"
                        android:textSize="18sp"
                        android:paddingBottom="4dp"
                        android:layout_weight="2"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:text="Place: "
                        android:id="@+id/place_to"
                        android:drawableLeft="@drawable/marker_24"
                        android:drawablePadding="2dp"
                        android:textSize="18sp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:textColor="#000000" />

                    <sa.iff.minatentlocator.InstantAutoComplete
                        android:text=""
                        android:hint="Example: 1/162"
                        android:textColor="@android:color/primary_text_light"
                        android:id="@+id/auto_to"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        android:paddingRight="70dp"
                        android:layout_weight="2"/>
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/route_96"
        app:backgroundTint="#fff700"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal" />

</android.support.design.widget.CoordinatorLayout>
